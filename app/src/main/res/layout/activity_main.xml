<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0288D1"
        android:gravity="center"
        android:weightSum="5">
        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/iconlist"
            android:layout_width="50dp"
            android:layout_height="30dp"/>
        <EditText
            android:id="@+id/edt1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="Ban dang tim kiem gi"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@color/white"
            android:textAlignment="center"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:backgroundTint="#0288D1"
            android:src="@drawable/search"
            android:layout_width="30dp"
            android:layout_height="35dp" />
        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/icongiohang"
            android:backgroundTint="#0288D1"/>
        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/iconuser"
            android:backgroundTint="#0288D1"/>
    </LinearLayout>
    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="180dp">
    </ViewFlipper>
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhà sách TiKi"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Sách Tiếng Việt"
            android:textColor="@color/black"
            android:backgroundTint="#f0f8ff"/>
        <Button
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Sách Tiếng Anh"
            android:textColor="@color/black"
            android:backgroundTint="#f0f8ff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Văn Phòng phẩm"
            android:textColor="@color/black"
            android:backgroundTint="#f0f8ff"/>
        <Button
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:text="Quà lưu niệm"
            android:textColor="@color/black"
            android:backgroundTint="#f0f8ff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Tác phẩm nổi bật"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <Button
            android:layout_marginLeft="70dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Xem thêm"
            android:textColor="@color/black"
            android:backgroundTint="#ff4500"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:src="@drawable/img_1"
                android:layout_width="250dp"
                android:layout_height="200dp"/>
            <TextView
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đắc Nhân Tâm "
                android:textSize="20sp"/>
            <TextView
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="122.000 đ "
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/img" />

            <TextView
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thien tai ben trai,ke dien ben phai "
                android:textSize="20sp"/>
            <TextView
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="122.000 đ "
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gdgdg"
        </LinearLayout>


    </LinearLayout>


</LinearLayout>